    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["esNext"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "./",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
